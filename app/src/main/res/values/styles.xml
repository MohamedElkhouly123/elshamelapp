<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ThemeOverlay.AppCompat.navTheme">
        <item name="android:fontFamily">@font/tajawalmedium</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <!-- Color of text and icon when SELECTED -->
        <item name="colorPrimary">#7F39FD</item>
        <!-- Background color when SELECTED -->
        <item name="colorControlHighlight">#EDEAFD</item>

    </style>


    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>

        <!-- Color of text and icon when SELECTED -->
<!--        <item name="colorPrimary">#7F39FD</item> -->
    </style>

    <style name="ThemeOverlay.AppCompat.navTheme2">
        <item name="android:fontFamily">@font/tajawalmedium</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <!-- Color of text and icon when SELECTED -->
        <item name="colorPrimary">#0057FF</item>
        <!-- Background color when SELECTED -->
        <item name="colorControlHighlight">#EDEAFD</item>

    </style>
    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ErrorAppeariance">

    </style>

    <style name="EditText">
        <item name="android:fontFamily">@font/janna</item>
<!--        <item name="android:textColorHint">@color/white</item>-->
<!--        <item name="android:textColor">@color/white</item>-->
        <item name="android:padding">@dimen/_6ssp</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="colorControlNormal">@color/white</item>
<!--        <item name="backgroundTint">@color/white</item>-->
    </style>

    <style name="costs_list_button">
        <item name="android:fontFamily">@font/janna</item>
        <item name="android:textColor">@color/blue</item>
<!--        <item name="android:layout_marginBottom">@dimen/_10ssp</item>-->
<!--        <item name="android:layout_marginTop">@dimen/_10ssp</item>-->
        <item name="android:layout_marginStart">@dimen/_20ssp</item>
        <item name="android:layout_marginEnd">@dimen/_20ssp</item>
<!--        <item name="android:padding">@dimen/_3ssp</item>-->
        <item name="android:textSize">@dimen/_10ssp</item>
<!--        <item name="android:textStyle">bold</item>-->
        <item name="android:background">@drawable/searchlight2</item>
    </style>
    <style name="Button">
        <item name="android:fontFamily">@font/janna</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:background">@drawable/gradient_btn_shape</item>
        <item name="android:layout_marginStart">@dimen/_65sdp</item>
        <item name="android:layout_marginEnd">@dimen/_65sdp</item>
        <item name="android:layout_marginTop">@dimen/_12sdp</item>
<!--        <item name="android:textStyle">bold</item>-->
    </style>
    <style name="text_input">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:layout_marginTop">@dimen/_25sdp</item>
        <item name="android:layout_marginStart">@dimen/_25sdp</item>
        <item name="android:layout_marginEnd">@dimen/_25sdp</item>
    </style>
    <style name="error_appearance">
        <item name="android:textColor">@color/txt_color2</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColorHighlight">@color/txt_color2</item>
        <item name="android:textColorHint">@color/txt_color2</item>
        <item name="android:textColorLink">@color/txt_color2</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="EditText2">
        <item name="android:fontFamily">@font/janna</item>
        <item name="android:textColorHint">@color/blue</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:layout_marginBottom">@dimen/_5ssp</item>
        <item name="android:padding">@dimen/_3ssp</item>
        <item name="android:layout_marginStart">@dimen/_5ssp</item>
        <item name="android:layout_marginEnd">@dimen/_5ssp</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>
