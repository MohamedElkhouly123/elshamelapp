<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/golds"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_127sdp"
    app:cardElevation="3dp"
   android:layout_margin="@dimen/_12sdp"
    app:cardCornerRadius="3dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    >

        <ImageView
            android:id="@+id/thumbnail_photo"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"
            android:background="@color/photo_placeholder" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_1sdp"
            android:paddingEnd="@dimen/_6sdp"
            android:paddingStart="@dimen/_6sdp"
            android:layout_gravity="center"
            android:background="@color/blue"
            >



            <TextView
                android:id="@+id/sub_category_2th_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:elevation="3dp"
                android:text="مجوهرات"
                android:drawableStart="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:drawablePadding="@dimen/_7sdp"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="@dimen/_15ssp"
                android:fontFamily="@font/janna"

                />
        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>