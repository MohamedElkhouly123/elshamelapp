<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    card_view:cardUseCompatPadding="true"
    android:layout_margin="@dimen/_5sdp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">
<!--    android:layout_marginLeft="@dimen/_5sdp"-->
<!--    android:layout_marginRight="@dimen/_5sdp"-->
<!--    android:layout_marginTop="@dimen/_3sdp"-->
<!--    android:layout_marginBottom="@dimen/_3sdp"-->
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/_162sdp">



    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--suppress AndroidLintContentDescription -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_125sdp">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#B3EBE9E9"
            android:scaleType="centerCrop" />
        <ImageView
            android:id="@+id/card_view_products_item_large_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="@dimen/_10sdp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/apple"
             />
            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_6sdp"
                android:gravity="left"
                android:elevation="@dimen/_15sdp"
                >
                <ImageView
                    android:id="@+id/card_view_products_item_large_photo_is_favourite"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:padding="@dimen/_5sdp"
                    android:layout_gravity="bottom|end"

                    android:background="@drawable/circle_style_favaurite"
                    android:elevation="7dp"
                    app:srcCompat="@drawable/ic_favorite_border_black_24dp"
                    />

            </LinearLayout>
<!--            <ImageView-->
<!--                android:id="@+id/my_favorite"-->
<!--                android:layout_width="@dimen/_25sdp"-->
<!--                android:layout_height="@dimen/_25sdp"-->
<!--                android:layout_marginTop="@dimen/_5sdp"-->
<!--                android:layout_marginEnd="@dimen/_5sdp"-->
<!--                android:layout_gravity="right|top"-->
<!--                android:elevation="@dimen/_25sdp"-->
<!--                android:scaleType="fitXY"-->
<!--                android:src="@drawable/ic_favorite_black_24dp"-->
<!--                android:layout_marginRight="10dp" />-->
        </FrameLayout>
        <TextView
            android:id="@+id/card_view_products_item_large_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:text="@string/send"
            android:maxLines="1"
            android:paddingLeft="@dimen/_7sdp"
            android:paddingTop="@dimen/_3sdp"
            android:paddingRight="@dimen/_7sdp"
            android:paddingBottom="@dimen/_1sdp"
            android:textColor="#6000" />
<!--        style="@style/TextAppearance.AppCompat.Subhead"-->

        <TextView
            android:id="@+id/card_view_products_item_large_cost_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:text="40$"
            android:maxLines="2"
            android:paddingLeft="@dimen/_7sdp"
            android:textSize="@dimen/_10ssp"
            android:paddingRight="@dimen/_7sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:textColor="#CCCBCB" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
