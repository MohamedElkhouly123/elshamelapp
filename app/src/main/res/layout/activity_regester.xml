<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"

    tools:context=".view.Regester.Regester">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_5sdp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            >
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:elevation="@dimen/_5sdp"
                android:background="#CC01B1FD"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/constr"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|start"

                        android:background="@drawable/ic_arrow_w_black_24dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/search_edit_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:fontFamily="@font/lemon"
                        android:text="@string/register"
                        android:textColor="#fff"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/list"
                        app:layout_constraintTop_toTopOf="parent" />


                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintBottom_toTopOf="@+id/button2"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.498"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/toolbar"
               android:gravity="center"
               >
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_80sdp"
                android:src="@drawable/ic_logo"
               />
           </LinearLayout>

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_160sdp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:background="@drawable/buttonstyle"
                android:drawableLeft="@drawable/iconfinder_facebook_1233013"
                android:text="@string/registerFace"
                android:textColor="#FFF"
                android:fontFamily="@font/lemon"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar"
                />


            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/lemon"
                android:textSize="@dimen/_10ssp"
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_40sdp"
                android:background="@drawable/google"
                android:drawableLeft="@drawable/iconfinder_google_plus_313479"
                android:text="@string/registerGoogle"
                android:textColor="#C0352C"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/con5"
                android:orientation="vertical"
                android:layout_marginTop="32dp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"

    >

                <View
                    android:id="@+id/SplitLine_hor1"
                    android:layout_width="48dp"
                    android:layout_height="2dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"

                    android:layout_marginBottom="8dp"
                    android:background="#070707"
                />
                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/orUse"
                    android:fontFamily="@font/ber"
                    android:textColor="#3F51B5"
                    android:textSize="@dimen/_16ssp"
                />
                <View
                    android:id="@+id/SplitLine_hor"
                    android:layout_width="48dp"
                    android:layout_height="2dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#070707"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/con5">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center"
                    >

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="@dimen/_88sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_marginStart="@dimen/_20sdp"

                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/searchlight"
                        android:text="@string/login"
                        android:textColor="#0057FF"
                        android:fontFamily="@font/janna"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12ssp"
                       />

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="@dimen/_88sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/searchlight"
                        android:text="@string/signUp"
                        android:textColor="#0057FF"
                        android:fontFamily="@font/janna"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"

                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/constraintLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:orientation="horizontal"

                    >



                    <TextView
                        android:id="@+id/later"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/later"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:textColor="#2F6EE4"
                        android:textSize="@dimen/_16ssp"
                        android:fontFamily="@font/ber"


                        />
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</ScrollView>