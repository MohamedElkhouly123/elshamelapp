    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="7"
        android:layout_marginTop="@dimen/_80sdp"
        >
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/costs_list_fragment_sr_refresh_donations"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/costs_list_category_fragment_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/load_more"
                    android:paddingTop="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:scrollbars="vertical" />

                <include
                    layout="@layout/cardview_item_load_more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true" />

                <include layout="@layout/error" />

            </RelativeLayout>

        </LinearLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <LinearLayout
        android:id="@+id/costs_list_fragment_bottom_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/buttonstyle_costs_list"
        android:padding="@dimen/_3sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:gravity="center"
            android:padding="@dimen/_3sdp"
            android:layout_gravity="center"
            >
        <Button
            android:id="@+id/costs_list_fragment_save_btn"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            style="@style/costs_list_button"
            android:layout_weight="1"
            android:text="@string/save_changes"
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            />
        <Button
            android:id="@+id/costs_list_fragment_add_new_item"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            style="@style/costs_list_button"
            android:layout_weight="1"
            android:text="@string/AddItem"
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            />
        </LinearLayout>

    </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>