<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/_4sdp"
    android:background="@android:color/white"

    >
<LinearLayout
    android:id="@+id/chat_item_lin_ly_reciever"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="@dimen/_4sdp"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/name_reciever_message"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:visibility="gone"
        android:src="@drawable/ic_account_circle_black_24dp"
        android:textAlignment="textEnd"
        />
    <TextView
        android:id="@+id/tv_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_8sdp"
        android:text="reciver"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_17ssp"
        android:background="@drawable/reciver_shape"
        android:visibility="visible"
         />
    <ImageView
        android:src="@drawable/ic_edit_location_blue_24dp"
        android:layout_width="@dimen/_85sdp"
        android:layout_height="@dimen/_85sdp"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/photoImageView_reciever"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />
</LinearLayout>
    <LinearLayout
        android:id="@+id/chat_item_lin_ly_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end"
        android:layout_margin="@dimen/_4sdp"

        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/name_sender_message"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:visibility="gone"
            android:src="@drawable/ic_account_circle_black_24dp"
            android:textAlignment="textEnd"
            />
        <TextView
            android:id="@+id/tv_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp"
            android:padding="@dimen/_8sdp"
            android:text="sender"
            android:visibility="gone"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_17ssp"
            android:background="@drawable/sender_shape"
            />
        <ImageView
            android:src="@drawable/ic_edit_location_blue_24dp"
            android:layout_width="@dimen/_85sdp"
            android:layout_height="@dimen/_85sdp"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/photoImageView_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />
    </LinearLayout>

</LinearLayout>