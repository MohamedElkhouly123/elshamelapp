<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_280sdp"
    app:behavior_hideable="true"
    app:behavior_peekHeight="@dimen/_200sdp"
    app:cardCornerRadius="20dp"
    app:cardElevation="@dimen/_60sdp"
    app:layout_behavior="@string/bottom_sheet_behavior">
<!--<LinearLayout-->
<!--    android:layout_width="match_parent"-->
<!--    android:layout_height="match_parent"-->
<!--    android:background="@drawable/gradient_btn_shape"-->
<!--    >-->

<!--</LinearLayout>-->
    <TextView
        android:id="@+id/bottomSheetHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="More Setting"

        android:textAppearance="@android:style/TextAppearance.Large" />

    <View
        android:id="@+id/SplitLine_hor1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"

        android:layout_alignParentRight="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="#070707"
      />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="100dp"
    android:layout_marginEnd="20dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="25dp"

        >

        <TextView
            android:id="@+id/delete_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:text="Delete Account"
            android:layout_weight="3"
            android:textSize="21sp"
            android:textColor="#6F4A02"
             />

            />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:layout_gravity="right|center"
            android:src="@drawable/ic_delete_blue_24dp"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="35dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:text="Add costs list"
            android:layout_weight="3"
            android:textSize="21sp"
            android:textColor="#6F4A02"

            />

        />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:layout_gravity="right|center"

            android:src="@drawable/ic_playlist_add_black_24dp"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:text="Edit costs list"
            android:layout_weight="3"
            android:textSize="21sp"
            android:textColor="#6F4A02"

            />

        />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:layout_gravity="end|center"
            android:src="@drawable/ic_mode_edit_black_24dp"
            android:layout_weight="1"

            />
    </LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>